<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoutineEditBG"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:background="@drawable/listrow_bg_hight_level"
    android:clickable="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@id/llRoutineEditClickAble"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <TextView
                    android:id="@+id/tvRoutineName"
                    style="@style/TextMainRoutineList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Вариация от Джоелла и Кристины" />

                <ImageButton
                    android:id="@+id/btDeleteRoutine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@android:color/transparent"
                    android:src="@drawable/delete_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <Button
                    android:id="@+id/btYT_id"
                    style="@style/OrangeSmallStyle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0"
                    android:background="@drawable/vid_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <TextView
                    style="@style/TextGrayRoutineList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/created" />

                <TextView
                    android:id="@+id/tvCreatedOn"
                    style="@style/TextGrayRoutineList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="15/12/2012 22:01" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <TextView
                    style="@style/TextGrayRoutineList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/modified" />

                <TextView
                    android:id="@+id/tvModifiedOn"
                    style="@style/TextGrayRoutineList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="15/12/2012 22:01" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<Button
    android:id="@+id/btEditRoutine"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_margin="4dp"
    android:layout_weight="0"
    style="@style/OrangeSmallStyle"
    android:background="@drawable/edit_button2l"/>
    
</LinearLayout>
